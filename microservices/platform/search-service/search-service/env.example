# Server Configuration
NODE_ENV=development
PORT=3007
HOST=localhost

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=ultramarket

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ultramarket_search

# External Services
PRODUCT_SERVICE_URL=http://localhost:3003
USER_SERVICE_URL=http://localhost:3001
ANALYTICS_SERVICE_URL=http://localhost:3008

# Search Configuration
SEARCH_MAX_RESULTS=100
SEARCH_DEFAULT_SIZE=20
SEARCH_TIMEOUT=5000

# Indexing Configuration
INDEX_BATCH_SIZE=100
INDEX_REFRESH_INTERVAL=1s

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=info
LOG_SERVICE_URL=
LOG_SERVICE_HOST=localhost
LOG_SERVICE_PORT=3010
LOG_SERVICE_PATH=/api/v1/logs

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true 