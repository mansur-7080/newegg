{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "incremental": false
  },
  "include": [
    "libs/shared/src/**/*",
    "microservices/*/src/**/*",
    "tests/**/*",
    "scripts/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.min.js",
    "**/*.bundle.js"
  ]
}