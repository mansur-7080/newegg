# Analytics Service Environment Configuration
NODE_ENV=development
PORT=3020

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/ultramarket_analytics?schema=public"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY=your-api-key-here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=300
CACHE_PREFIX=analytics_service

# WebSocket Configuration
FRONTEND_URL=http://localhost:3000

# External Services
USER_SERVICE_URL=http://localhost:3001
STORE_SERVICE_URL=http://localhost:3010
ORDER_SERVICE_URL=http://localhost:3003

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
REAL_TIME_ENABLED=true
HOURLY_AGGREGATION=true
DAILY_AGGREGATION=true

# Development
DEBUG=true
ENABLE_SWAGGER=true