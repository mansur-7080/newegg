# ========================================
# ULTRAMARKET E-COMMERCE PLATFORM
# Environment Configuration Template
# ========================================

# ========================================
# SECURITY CONFIGURATION
# ========================================
# IMPORTANT: Use strong, unique values in production!
# Generate JWT secrets: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_SECRET_KEY
JWT_REFRESH_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_DIFFERENT_STRONG_SECRET_KEY
ENCRYPTION_KEY=CHANGE_THIS_IN_PRODUCTION_USE_32_BYTE_KEY

# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL (Main Database)
DATABASE_URL=postgresql://ultramarket_user:CHANGE_PASSWORD_IN_PRODUCTION@localhost:5432/ultramarket
POSTGRES_DB=ultramarket
POSTGRES_USER=ultramarket_user
POSTGRES_PASSWORD=CHANGE_PASSWORD_IN_PRODUCTION

# MongoDB (Product Catalog)
MONGODB_URI=mongodb://ultramarket_admin:CHANGE_PASSWORD_IN_PRODUCTION@localhost:27017/ultramarket_products?authSource=admin
MONGODB_DB=ultramarket_products
MONGODB_USER=ultramarket_admin
MONGODB_PASSWORD=CHANGE_PASSWORD_IN_PRODUCTION

# Redis (Cache & Sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=CHANGE_PASSWORD_IN_PRODUCTION

# ========================================
# MICROSERVICES CONFIGURATION
# ========================================
# Service URLs
USER_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3003
ORDER_SERVICE_URL=http://localhost:3004
CART_SERVICE_URL=http://localhost:3005
PAYMENT_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007
SEARCH_SERVICE_URL=http://localhost:3008
ANALYTICS_SERVICE_URL=http://localhost:3009
INVENTORY_SERVICE_URL=http://localhost:3010
SHIPPING_SERVICE_URL=http://localhost:3011
REVIEW_SERVICE_URL=http://localhost:3012
API_GATEWAY_URL=http://localhost:8000

# ========================================
# EXTERNAL SERVICES
# ========================================
# Payment Services
STRIPE_SECRET_KEY=sk_test_CHANGE_THIS_IN_PRODUCTION
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_THIS_IN_PRODUCTION

# Email Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=CHANGE_THIS_IN_PRODUCTION
EMAIL_FROM=noreply@ultramarket.com

# File Storage
AWS_ACCESS_KEY_ID=CHANGE_THIS_IN_PRODUCTION
AWS_SECRET_ACCESS_KEY=CHANGE_THIS_IN_PRODUCTION
AWS_REGION=us-east-1
AWS_S3_BUCKET=ultramarket-storage

# ========================================
# MONITORING & LOGGING
# ========================================
# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ========================================
# PRODUCTION SECURITY NOTES
# ========================================
# 1. Change ALL passwords and secrets
# 2. Use environment-specific values
# 3. Enable SSL/TLS in production
# 4. Set NODE_ENV=production
# 5. Use strong database passwords
# 6. Enable database SSL connections
# 7. Use secrets management (AWS Secrets Manager, HashiCorp Vault)
# 8. Enable audit logging
# 9. Set up proper firewall rules
# 10. Use HTTPS everywhere 