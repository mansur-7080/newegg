# =================== ULTRA MARKET ENVIRONMENT CONFIGURATION ===================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# =================== APPLICATION CONFIGURATION ===================

# Application Settings
NODE_ENV=development
APP_VERSION=1.0.0
API_VERSION=v1
LOG_LEVEL=info

# Server Configuration
PORT=3000
HOST=localhost
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================== DATABASE CONFIGURATION ===================

# PostgreSQL - Primary Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ultramarket
POSTGRES_USER=ultramarket_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# MongoDB - Document Database
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=ultramarket_products
MONGODB_USERNAME=ultramarket_admin
MONGODB_PASSWORD=your_secure_mongodb_password_here

# Redis - Cache & Session Store
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0

# =================== JWT CONFIGURATION ===================

# JWT Secrets (Generate strong secrets using: openssl rand -base64 32)
JWT_ACCESS_SECRET=your_super_secure_jwt_access_secret_here
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =================== EXTERNAL SERVICES ===================

# Elasticsearch - Search Engine
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password_here

# Apache Kafka - Message Queue
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ultramarket

# =================== PAYMENT SERVICES ===================

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# =================== EMAIL CONFIGURATION ===================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password_here
SMTP_FROM=noreply@ultramarket.com

# =================== MONITORING & OBSERVABILITY ===================

# Prometheus - Metrics Collection
PROMETHEUS_PORT=9090

# Grafana - Monitoring Dashboards
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_admin_password_here

# Jaeger - Distributed Tracing
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# =================== SECURITY CONFIGURATION ===================

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

# Session Configuration
SESSION_SECRET=your_secure_session_secret_here
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# =================== SERVICE URLs ===================

# API Gateway
API_GATEWAY_PORT=8000
API_GATEWAY_URL=http://localhost:8000

# Core Services
USER_SERVICE_PORT=3001
USER_SERVICE_URL=http://localhost:3001
AUTH_SERVICE_PORT=3002
AUTH_SERVICE_URL=http://localhost:3002

# Business Services
PRODUCT_SERVICE_PORT=3003
PRODUCT_SERVICE_URL=http://localhost:3003
ORDER_SERVICE_PORT=3004
ORDER_SERVICE_URL=http://localhost:3004
PAYMENT_SERVICE_PORT=3005
PAYMENT_SERVICE_URL=http://localhost:3005
CART_SERVICE_PORT=3006
CART_SERVICE_URL=http://localhost:3006

# Platform Services
NOTIFICATION_SERVICE_PORT=3007
NOTIFICATION_SERVICE_URL=http://localhost:3007
SEARCH_SERVICE_PORT=3008
SEARCH_SERVICE_URL=http://localhost:3008
ANALYTICS_SERVICE_PORT=3009
ANALYTICS_SERVICE_URL=http://localhost:3009

# Frontend Applications
WEB_APP_PORT=8080
WEB_APP_URL=http://localhost:8080
ADMIN_DASHBOARD_PORT=8081
ADMIN_DASHBOARD_URL=http://localhost:8081

# =================== DEVELOPMENT CONFIGURATION ===================

# Development Tools
NODEMON_ENABLED=true
DEBUG_ENABLED=true
HOT_RELOAD_ENABLED=true

# Test Configuration
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/ultramarket_test
TEST_MONGODB_URL=mongodb://test_user:test_password@localhost:27017/ultramarket_test
TEST_REDIS_URL=redis://:test_password@localhost:6379/1

# =================== PRODUCTION OVERRIDES ===================

