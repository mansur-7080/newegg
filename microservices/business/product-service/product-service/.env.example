# Application
NODE_ENV=development
PORT=3003
SERVICE_NAME=product-service

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ultramarket_products

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Security
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# External Services
USER_SERVICE_URL=http://user-service:3002
INVENTORY_SERVICE_URL=http://inventory-service:3008
NOTIFICATION_SERVICE_URL=http://notification-service:3009

# Logging
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Queue
QUEUE_NAME=product-queue

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=10000