# Server Configuration
NODE_ENV=development
PORT=3007
HOST=localhost

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=ultramarket

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Database Configuration
SEARCH_DATABASE_URL=postgresql://user:password@localhost:5432/ultramarket_search

# External Services
PRODUCT_SERVICE_URL=http://localhost:3003
USER_SERVICE_URL=http://localhost:3001
ANALYTICS_SERVICE_URL=http://localhost:3008

# Search Configuration
SEARCH_MAX_RESULTS=100
SEARCH_DEFAULT_SIZE=20
SEARCH_TIMEOUT=5000

# Indexing Configuration
INDEX_BATCH_SIZE=100
INDEX_REFRESH_INTERVAL=1s

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=info
LOG_SERVICE_URL=
LOG_SERVICE_HOST=localhost

# Additional Search Service Configuration
SEARCH_ENABLE_ANALYTICS=true
SEARCH_ENABLE_PERSONALIZATION=true
SEARCH_ENABLE_AUTOCOMPLETE=true
SEARCH_ENABLE_SUGGESTIONS=true

# Message Queue Configuration (for real-time indexing)
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=ultramarket.search
RABBITMQ_QUEUE=search.index.updates

# Performance Configuration
SEARCH_ENABLE_CACHING=true
SEARCH_CACHE_DURATION=300
ELASTICSEARCH_SHARDS=1
ELASTICSEARCH_REPLICAS=0 