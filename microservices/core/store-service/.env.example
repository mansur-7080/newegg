# Store Service Environment Variables

# Database
STORE_DATABASE_URL="postgresql://username:password@localhost:5432/ultramarket_stores"

# Service Configuration
PORT=3003
NODE_ENV="development"
SERVICE_NAME="store-service"

# Redis (for caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# File Upload
UPLOAD_MAX_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,application/pdf"
UPLOAD_DESTINATION="uploads/stores"

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="ultramarket-store-uploads"

# External Services
AUTH_SERVICE_URL="http://localhost:3001"
USER_SERVICE_URL="http://localhost:3002"
NOTIFICATION_SERVICE_URL="http://localhost:3010"
PAYMENT_SERVICE_URL="http://localhost:3008"

# Store Configuration
DEFAULT_COMMISSION_RATE=5.0 # percentage
FREE_PLAN_PRODUCT_LIMIT=50
BASIC_PLAN_PRODUCT_LIMIT=500
PREMIUM_PLAN_PRODUCT_LIMIT=5000

# Document Verification
DOCUMENT_MAX_SIZE=5242880 # 5MB
DOCUMENT_TYPES="pdf,jpg,jpeg,png"
AUTO_VERIFY_DOCUMENTS=false

# Business Verification
REQUIRE_BUSINESS_LICENSE=true
REQUIRE_TAX_NUMBER=true
VERIFICATION_TIMEOUT_DAYS=7

# Analytics
ENABLE_STORE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365

# Subscription Management
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"
PAYMENT_CURRENCY="UZS"

# Geolocation
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
ENABLE_LOCATION_VERIFICATION=true

# Email Templates
STORE_APPROVAL_TEMPLATE="store-approved"
STORE_REJECTION_TEMPLATE="store-rejected"
SUBSCRIPTION_EXPIRY_TEMPLATE="subscription-expiry"

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/store-service.log"