{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["node", "jest", "cypress"],
    "jsx": "react-jsx"
  },
  "include": [
    "tests/**/*",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/*.cy.ts",
    "**/*.cy.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}