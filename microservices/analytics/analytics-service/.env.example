# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ultramarket_analytics?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Server
PORT=3020
NODE_ENV=development

# Security
JWT_SECRET="your-super-secure-jwt-secret-key-here-minimum-32-characters"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Logging
LOG_LEVEL=info

# Analytics
ANALYTICS_CACHE_TTL=300
REALTIME_UPDATE_INTERVAL=30000
BATCH_PROCESSING_SIZE=1000

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091

# External Services
USER_SERVICE_URL="http://localhost:3001"
PRODUCT_SERVICE_URL="http://localhost:3005"
ORDER_SERVICE_URL="http://localhost:3006"

# Cron Jobs
ENABLE_CRON_JOBS=true
METRICS_UPDATE_SCHEDULE="*/5 * * * *"
DAILY_REPORT_SCHEDULE="0 1 * * *"