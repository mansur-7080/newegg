# Tech Product Service Environment Variables

# Database
TECH_PRODUCT_DATABASE_URL="postgresql://username:password@localhost:5432/ultramarket_tech_products"

# Service Configuration
PORT=3004
NODE_ENV="development"
SERVICE_NAME="tech-product-service"

# Redis (for caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Elasticsearch (for search)
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX="tech_products"

# File Upload
UPLOAD_MAX_SIZE=20971520 # 20MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"
UPLOAD_DESTINATION="uploads/products"
MAX_IMAGES_PER_PRODUCT=10

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="ultramarket-product-images"

# External Services
AUTH_SERVICE_URL="http://localhost:3001"
STORE_SERVICE_URL="http://localhost:3003"
ANALYTICS_SERVICE_URL="http://localhost:3009"
SEARCH_SERVICE_URL="http://localhost:3011"

# Product Configuration
AUTO_GENERATE_SKU=true
SKU_PREFIX="TECH"
DEFAULT_CURRENCY="UZS"
ENABLE_INVENTORY_TRACKING=true

# Image Processing
IMAGE_QUALITY=85
THUMBNAIL_SIZE="300x300"
MEDIUM_SIZE="600x600"
LARGE_SIZE="1200x1200"
ENABLE_WEBP_CONVERSION=true

# Pricing
ENABLE_DYNAMIC_PRICING=false
PRICE_CHANGE_NOTIFICATION=true
BULK_DISCOUNT_THRESHOLD=10

# Categories & Brands
AUTO_CREATE_CATEGORIES=false
REQUIRE_BRAND_VERIFICATION=true
MAX_CATEGORY_DEPTH=5

# Specifications
ENABLE_SPEC_VALIDATION=true
REQUIRE_TECH_SPECS=true
AUTO_EXTRACT_SPECS=false

# Reviews & Ratings
ENABLE_REVIEWS=true
REQUIRE_PURCHASE_FOR_REVIEW=true
AUTO_MODERATE_REVIEWS=false
MIN_RATING=1
MAX_RATING=5

# Inventory
LOW_STOCK_THRESHOLD=10
OUT_OF_STOCK_NOTIFICATION=true
ENABLE_BACKORDERS=false

# SEO
AUTO_GENERATE_SEO=true
META_DESCRIPTION_LENGTH=160
SEO_TITLE_LENGTH=60

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/tech-product-service.log"