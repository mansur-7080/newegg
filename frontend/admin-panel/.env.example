# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_TITLE=UltraMarket Admin Panel
VITE_APP_VERSION=2.0.0

# Authentication Configuration
VITE_AUTH_TOKEN_KEY=adminToken
VITE_AUTH_REFRESH_TOKEN_KEY=refreshToken

# Sentry Configuration (Error Tracking)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=development

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Features Configuration
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true

# WebSocket Configuration (for real-time features)
VITE_WS_URL=ws://localhost:3001
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000

# Cache Configuration
VITE_CACHE_DURATION=300000
VITE_STALE_TIME=60000

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_THEME_STORAGE_KEY=admin-theme