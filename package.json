{
  "name": "@ultramarket/workspace",
  "version": "2.0.0",
  "description": "Enterprise E-Commerce Platform - UltraMarket",
  "author": "UltraMarket Engineering Team",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "frontend/*",
    "microservices/core/*",
    "microservices/business/*",
    "microservices/platform/*",
    "microservices/ml-ai/*",
    "microservices/analytics/*",
    "microservices/admin/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nx build",
    "build:all": "nx run-many --target=build --all",
    "test": "nx test",
    "test:all": "nx run-many --target=test --all",
    "lint": "nx lint",
    "lint:all": "nx run-many --target=lint --all",
    "dev": "nx serve",
    "dev:web": "nx serve web-app",
    "dev:admin": "nx serve admin-panel",
    "dev:api": "nx serve api-gateway",
    "start": "nx serve",
    "start:prod": "node dist/frontend/web-app/main.js",
    "docker:build": "docker-compose -f docker-compose.dev.yml build",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "migrate": "nx run-many --target=migrate --all",
    "seed": "nx run-many --target=seed --all",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "affected:build": "nx affected:build",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "graph": "nx graph",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nx/devkit": "^17.2.0",
    "@nx/js": "^17.2.0",
    "@nx/linter": "^17.2.0",
    "@nx/node": "^17.2.0",
    "@nx/react": "^17.2.0",
    "@nx/webpack": "^21.2.2",
    "@nx/workspace": "^17.2.0",
    "@prisma/client": "^5.7.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "elasticsearch": "^16.7.3",
    "express": "^4.18.2",
    "fastify": "^4.24.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "3.0.1",
    "kafka-node": "^5.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^8.0.0",
    "next": "^14.0.0",
    "prisma": "^5.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "redis": "^4.6.0",
    "uuid": "^9.0.1",
    "vite": "7.0.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "cypress": "^13.6.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "nx": "^17.2.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}
