# Auth Service Environment Variables

# Database
AUTH_DATABASE_URL="postgresql://username:password@localhost:5432/ultramarket_auth"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-for-auth-service"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Service Configuration
PORT=3001
NODE_ENV="development"
SERVICE_NAME="auth-service"

# Redis (for sessions and caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Email Service
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@ultramarket.uz"

# SMS Service (for 2FA)
SMS_PROVIDER="eskiz" # or "playmobile"
SMS_API_KEY="your-sms-api-key"
SMS_SECRET="your-sms-secret"

# Two-Factor Authentication
TOTP_SERVICE_NAME="UltraMarket"
TOTP_ISSUER="UltraMarket.uz"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=1800000 # 30 minutes

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/auth-service.log"