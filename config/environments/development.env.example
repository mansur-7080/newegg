# UltraMarket Development Environment Configuration
# Copy this file to development.env and update with your actual values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ultramarket_dev
POSTGRES_USER=ultramarket_user
POSTGRES_PASSWORD=${DB_PASSWORD:-ultramarket_secure_password_2024}

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ultramarket_dev
MONGODB_USER=ultramarket_user
MONGODB_PASSWORD=${MONGODB_PASSWORD:-ultramarket_mongo_secure_2024}

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD:-ultramarket_redis_secure_2024}

# JWT Configuration - Generate strong secrets
JWT_SECRET=${JWT_SECRET:-ultramarket_jwt_secret_64_chars_long_ultra_secure_2024}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET:-ultramarket_refresh_secret_64_chars_long_ultra_secure_2024}
JWT_EXPIRES_IN=900
JWT_REFRESH_EXPIRES_IN=604800

# Encryption Keys - Generate strong encryption keys
ENCRYPTION_KEY=${ENCRYPTION_KEY:-ultramarket_encryption_key_32_chars_long_2024}

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=${SMTP_PASSWORD:-your_app_password}
SMTP_FROM=noreply@ultramarket.uz

# SMS Services (Uzbekistan)
ESKIZ_API_KEY=your_eskiz_api_key
ESKIZ_EMAIL=your_eskiz_email
ESKIZ_PASSWORD=${ESKIZ_PASSWORD:-your_eskiz_password}

PLAYMOBILE_API_KEY=your_playmobile_api_key
PLAYMOBILE_PASSWORD=${PLAYMOBILE_PASSWORD:-your_playmobile_password}

# Payment Gateways (Uzbekistan)
CLICK_MERCHANT_ID=your_click_merchant_id
CLICK_SECRET_KEY=${CLICK_SECRET_KEY:-your_click_secret_key}
CLICK_SERVICE_ID=your_click_service_id

PAYME_MERCHANT_ID=your_payme_merchant_id
PAYME_SECRET_KEY=${PAYME_SECRET_KEY:-your_payme_secret_key}

UZCARD_MERCHANT_ID=your_uzcard_merchant_id
UZCARD_SECRET_KEY=${UZCARD_SECRET_KEY:-your_uzcard_secret_key}

# External APIs
CURRENCY_API_KEY=${CURRENCY_API_KEY:-your_currency_api_key}

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET:-your_google_client_secret}
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY:-your_google_maps_api_key}

# Application Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000
API_GATEWAY_URL=http://localhost:8000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=debug
LOG_SERVICE_URL=http://localhost:3000/logs

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
