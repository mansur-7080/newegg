# ==================================================
# ULTRAMARKET BACKEND ENVIRONMENT CONFIGURATION
# ==================================================

# ==================================================
# DATABASE CONFIGURATION
# ==================================================

# PostgreSQL Database
DATABASE_URL=postgresql://ultramarket_user:ultramarket_password@localhost:5432/ultramarket
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ultramarket
POSTGRES_USER=ultramarket_user
POSTGRES_PASSWORD=ultramarket_password

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================================================
# JWT CONFIGURATION
# ==================================================

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-super-secret-access-key-here-make-it-long-and-secure-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-make-it-long-and-secure-at-least-32-characters
JWT_EMAIL_VERIFICATION_SECRET=your-email-verification-secret-key-here
JWT_PASSWORD_RESET_SECRET=your-password-reset-secret-key-here

# JWT Settings
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_EMAIL_VERIFICATION_EXPIRY=24h
JWT_PASSWORD_RESET_EXPIRY=1h

# ==================================================
# API GATEWAY CONFIGURATION
# ==================================================

# Kong API Gateway
KONG_DATABASE=postgres
KONG_PG_HOST=localhost
KONG_PG_USER=ultramarket_user
KONG_PG_PASSWORD=ultramarket_password
KONG_PG_DATABASE=ultramarket

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# ==================================================
# SERVICE PORTS
# ==================================================

# Core Services
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
API_GATEWAY_PORT=8000

# Business Services
PRODUCT_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3004
PAYMENT_SERVICE_PORT=3005
CART_SERVICE_PORT=3006
INVENTORY_SERVICE_PORT=3007

# Platform Services
SEARCH_SERVICE_PORT=3008
NOTIFICATION_SERVICE_PORT=3009
FILE_SERVICE_PORT=3010
CONTENT_SERVICE_PORT=3011

# Analytics Services
ANALYTICS_SERVICE_PORT=3012
RECOMMENDATION_SERVICE_PORT=3013
FRAUD_DETECTION_SERVICE_PORT=3014

# ==================================================
# PAYMENT CONFIGURATION
# ==================================================

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal (Alternative)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ==================================================
# EMAIL CONFIGURATION
# ==================================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=true

# Email Templates
EMAIL_FROM=noreply@ultramarket.com
EMAIL_FROM_NAME=UltraMarket

# ==================================================
# FILE STORAGE CONFIGURATION
# ==================================================

# AWS S3 (Recommended for production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ultramarket-assets

# Local Storage (Development)
LOCAL_STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760

# ==================================================
# SEARCH CONFIGURATION
# ==================================================

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=ultramarket_products

# ==================================================
# MONITORING CONFIGURATION
# ==================================================

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs

# ==================================================
# SECURITY CONFIGURATION
# ==================================================

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Session
SESSION_SECRET=your-session-secret-key-here
SESSION_MAX_AGE=86400000

# Password Policy
MIN_PASSWORD_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# ==================================================
# BUSINESS CONFIGURATION
# ==================================================

# Currency
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,UZS

# Tax Configuration
TAX_RATE=0.1
TAX_INCLUDED=false

# Shipping
DEFAULT_SHIPPING_COST=10.00
FREE_SHIPPING_THRESHOLD=100.00

# Inventory
LOW_STOCK_THRESHOLD=5
OUT_OF_STOCK_THRESHOLD=0

# ==================================================
# NOTIFICATION CONFIGURATION
# ==================================================

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==================================================
# ANALYTICS CONFIGURATION
# ==================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# ==================================================
# DEVELOPMENT CONFIGURATION
# ==================================================

# Environment
NODE_ENV=development
APP_VERSION=1.0.0
DEBUG=true

# Development Tools
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081

# Hot Reload
WATCH_MODE=true
AUTO_RESTART=true

# ==================================================
# PRODUCTION CONFIGURATION
# ==================================================

# Production Overrides (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=warn
# CORS_ORIGIN=https://yourdomain.com
# SMTP_SECURE=true
# REDIS_PASSWORD=your_redis_password
# DATABASE_URL=postgresql://prod_user:prod_password@prod_host:5432/ultramarket_prod

# ==================================================
# TESTING CONFIGURATION
# ==================================================

# Test Database
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/ultramarket_test

# Test Environment
TEST_NODE_ENV=test
TEST_LOG_LEVEL=error

# ==================================================
# DOCKER CONFIGURATION
# ==================================================

# Docker Compose
DOCKER_COMPOSE_FILE=config/docker/docker-compose.dev.yml

# Container Names
POSTGRES_CONTAINER=ultramarket_postgres
REDIS_CONTAINER=ultramarket_redis
API_GATEWAY_CONTAINER=ultramarket_api_gateway

# ==================================================
# KUBERNETES CONFIGURATION
# ==================================================

# Kubernetes Namespace
K8S_NAMESPACE=ultramarket

# Kubernetes Resources
K8S_CPU_LIMIT=500m
K8S_MEMORY_LIMIT=512Mi
K8S_CPU_REQUEST=100m
K8S_MEMORY_REQUEST=128Mi

# ==================================================
# BACKUP CONFIGURATION
# ==================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ==================================================
# CUSTOM CONFIGURATION
# ==================================================

# Add your custom environment variables below
# CUSTOM_VARIABLE=value 