{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": true
  },
  "include": [
    "libs/**/*",
    "microservices/**/*",
    "frontend/**/*",
    "tests/**/*",
    "scripts/**/*",
    "*.ts",
    "*.js"
  ],
  "exclude": ["node_modules", "dist", "build", "coverage", "**/*.min.js", "**/*.bundle.js"],
  "references": [
    {
      "path": "./libs/shared"
    },
    {
      "path": "./libs/types"
    },
    {
      "path": "./libs/utils"
    },
    {
      "path": "./libs/constants"
    },
    {
      "path": "./libs/ui-components"
    }
  ]
}
